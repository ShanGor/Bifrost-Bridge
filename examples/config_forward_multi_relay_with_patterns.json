{
  "mode": "Forward",
  "listen_addr": "127.0.0.1:8080",
  "max_connections": 1000,
  "connect_timeout_secs": 10,
  "idle_timeout_secs": 90,
  "max_connection_lifetime_secs": 300,
  "connection_pool_enabled": true,
  "relay_proxies": [
    {
      "relay_proxy_url": "http://corporate-proxy.company.com:8080",
      "relay_proxy_username": "corp_user",
      "relay_proxy_password": "corp_pass",
      "relay_proxy_domains": [
        "google.com",
        ".github.com",
        "*.cloudflare.com"
      ]
    },
    {
      "relay_proxy_url": "http://regional-proxy.example.com:3128",
      "relay_proxy_domains": [
        "example.com",
        "api.example.com",
        ".amazonaws.com"
      ]
    },
    {
      "relay_proxy_url": "http://fallback-proxy.local:8888",
      "relay_proxy_username": "fallback_user",
      "relay_proxy_password": "fallback_pass",
      "relay_proxy_domains": []
    }
  ]
}
