{
  "mode": "Reverse",
  "listen_addr": "127.0.0.1:8080",
  "reverse_proxy_routes": [
    {
      "id": "api",
      "predicates": [
        { "type": "Path", "patterns": ["/api/**"], "match_trailing_slash": true }
      ],
      "targets": [
        { "id": "api-a", "url": "http://127.0.0.1:9001", "weight": 3 },
        { "id": "api-b", "url": "http://127.0.0.1:9002", "weight": 1 }
      ],
      "load_balancing": { "policy": "weighted_round_robin" }
    }
  ]
}
