{
  "mode": "Reverse",
  "listen_addr": "127.0.0.1:8088",
  "max_connections": 10000,
  "worker_threads": 8,
  "connect_timeout_secs": 10,
  "idle_timeout_secs": 90,
  "max_connection_lifetime_secs": 300,
  "static_files": {
    "mounts": [
      {
        "path": "/blog",
        "root_dir": "D:\\sources\\rust\\sam-blog\\frontend\\dist"
      }
    ],
    "enable_directory_listing": false,
    "index_files": ["index.html", "index.htm"],
    "spa_mode": true,
    "spa_fallback_file": "index.html"
  },
  "reverse_proxy_routes": [
    {
      "id": "primary-api",
      "target": "http://127.0.0.1:8080",
      "priority": 0,
      "reverse_proxy_config": {
        "pool_max_idle_per_host": 4,
        "pool_idle_timeout_secs": 120
      },
      "predicates": [
        { "type": "Path", "patterns": ["/blog-api/**"], "match_trailing_slash": true }
      ],
      "strip_path_prefix": "/blog-api"
    }
  ],
  "monitoring": {
    "enabled": false
  }
}
